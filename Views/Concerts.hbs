    <style>
        /* Your existing CSS styles here */

        /* Style for the concert boxes */
        .concert-box {
            margin: 20px 0;
            padding: 20px;
            background-color: rgb(232, 223, 223);
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(17, 3, 3, 0.2);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .concert-box img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .popup {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: rgba(164, 153, 153, 0.8);
            color: #fff;
            border-radius: 5px;
            z-index: 1000;
        }
        .popup img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="concert-box" onclick="showPopup(1)">
        <h1>Upcoming Concerts</h1>
        {{#if concertData}}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>VenueID</th>
                    
                    
                    
                </tr>
            </thead>
            <tbody>
                {{#each concertData}}
                <tr>
                    <td><p><strong>{{ID}}</strong></p></td>
                    <td><strong>{{Name}}</strong></td>
                    <td><strong>{{Date}}</strong></td>
                    <td><strong>{{Description}}</strong></td>
                    <td><strong>{{Type}}</strong></td>
                    <td><strong>{{Venue}}</strong></td>
                    <th><a href="/BuyTickets">Buy ticket!</a></th>
